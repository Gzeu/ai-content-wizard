{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "ai-content-wizard",
  "version": "1.0.0",
  "description": "A powerful AI-powered content generation tool using Groq's API",
  "main": "src/ai-provider.js",
  "bin": {
    "ai-wizard": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "dev": "node --watch src/cli.js",
    "test": "npx cross-env NODE_ENV=test mocha --require test/setup.js test/**/*.test.js --timeout 10000",
    "test:watch": "npx cross-env NODE_ENV=test mocha --require test/setup.js --watch test/**/*.test.js",
    "test:debug": "npx cross-env NODE_ENV=test DEBUG_GROQ=true node test-app.js",
    "test:coverage": "npx cross-env NODE_ENV=test nyc --reporter=text mocha --require test/setup.js test/**/*.test.js",
    "coverage": "nyc --reporter=lcov --reporter=text mocha test/**/*.test.js",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "eslint src/**.js",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "build": "pkg . --out-path dist"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.test.js",
      "**/test/**",
      "**/node_modules/**"
    ],
    "reporter": [
      "text",
      "lcov",
      "clover"
    ],
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80
  },
  "keywords": [
    "ai",
    "groq",
    "llm",
    "content-generation",
    "cli",
    "llama3",
    "mixtral",
    "ai-tools"
  ],
  "author": "Gzeu <gzeu@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gzeu/ai-content-wizard.git"
  },
  "bugs": {
    "url": "https://github.com/Gzeu/ai-content-wizard/issues"
  },
  "homepage": "https://github.com/Gzeu/ai-content-wizard#readme",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.3.2",
    "inquirer": "^12.9.6",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "chai": "^6.2.0",
    "codecov": "^3.8.3",
    "eslint": "^9.36.0",
    "jest": "^30.2.0",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0",
    "pkg": "^5.8.1",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pkg": {
    "outputPath": "dist",
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "assets": [
      ".env"
    ]
  }
}
